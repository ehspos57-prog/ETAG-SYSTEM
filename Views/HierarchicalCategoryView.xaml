<UserControl x:Class="ETAG_ERP.Views.HierarchicalCategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ETAG_ERP.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <!-- نمط الكروت -->
        <Style x:Key="CategoryCardStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Margin="{TemplateBinding Margin}">
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" Direction="270" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- نمط شريط التنقل -->
        <Style x:Key="BreadcrumbStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#2196F3"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E3F2FD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- العنوان -->
        <TextBlock Grid.Row="0" Text="التصنيفات الهرمية" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="20"/>

        <!-- شريط التنقل (Breadcrumb) -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="20">
            <Button Style="{StaticResource BreadcrumbStyle}" 
                    Content="🏠 الرئيسية" 
                    Click="Home_Click"/>
            <TextBlock Text=" > " VerticalAlignment="Center" Margin="5"/>
            <ItemsControl x:Name="BreadcrumbItems" ItemsSource="{Binding BreadcrumbPath}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Button Style="{StaticResource BreadcrumbStyle}" 
                                    Content="{Binding Name}" 
                                    Click="Breadcrumb_Click"
                                    Tag="{Binding}"/>
                            <TextBlock Text=" > " VerticalAlignment="Center" Margin="5"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- منطقة عرض الكروت -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" 
                      HorizontalScrollBarVisibility="Disabled">
            <ItemsControl x:Name="CategoriesContainer" 
                          ItemsSource="{Binding CurrentCategories}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{StaticResource CategoryCardStyle}" 
                                Width="200" Height="150"
                                Click="Category_Click"
                                Tag="{Binding}">
                            <StackPanel>
                                <TextBlock Text="{Binding Icon}" 
                                           FontSize="48" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}" 
                                           FontSize="16" FontWeight="Bold"
                                           HorizontalAlignment="Center" 
                                           Margin="0,10,0,5"/>
                                <TextBlock Text="{Binding Description}" 
                                           FontSize="12" 
                                           HorizontalAlignment="Center"
                                           TextWrapping="Wrap"
                                           Foreground="Gray"/>
                                <TextBlock FontSize="10" 
                                           HorizontalAlignment="Center"
                                           Foreground="Blue"
                                           Margin="0,5,0,0">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0} أصناف">
                                            <Binding Path="ItemCount"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- أزرار التحكم -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="20">
            <Button Content="➕ إضافة تصنيف" 
                    Background="#4CAF50" Foreground="White"
                    Padding="15,8" Margin="5"
                    Click="AddCategory_Click"/>
            <Button Content="✏️ تعديل" 
                    Background="#FF9800" Foreground="White"
                    Padding="15,8" Margin="5"
                    Click="EditCategory_Click"
                    IsEnabled="{Binding IsCategorySelected}"/>
            <Button Content="🗑️ حذف" 
                    Background="#F44336" Foreground="White"
                    Padding="15,8" Margin="5"
                    Click="DeleteCategory_Click"
                    IsEnabled="{Binding IsCategorySelected}"/>
            <Button Content="🔙 رجوع" 
                    Background="#9E9E9E" Foreground="White"
                    Padding="15,8" Margin="5"
                    Click="Back_Click"
                    IsEnabled="{Binding CanGoBack}"/>
        </StackPanel>
    </Grid>
</UserControl>
