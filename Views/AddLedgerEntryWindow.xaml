<Window x:Class="ETAG_ERP.Views.AddLedgerEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="إضافة قيد محاسبي" 
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <Style x:Key="FormCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F5F5">
        <Border Style="{StaticResource FormCard}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="➕ إضافة قيد محاسبي جديد" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="#2C3E50" 
                           Margin="0,0,0,20" Grid.Row="0"/>

                <!-- Form -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Entry Date -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="تاريخ القيد" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <DatePicker x:Name="EntryDatePicker" 
                                        materialDesign:HintAssist.Hint="تاريخ القيد"
                                        SelectedDate="{Binding EntryDate}"/>
                        </StackPanel>

                        <!-- Entry Number -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="رقم القيد" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="EntryNumberTextBox" 
                                     materialDesign:HintAssist.Hint="رقم القيد"
                                     Text="{Binding EntryNumber}"/>
                        </StackPanel>

                        <!-- Account Selection -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="الحساب" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="AccountComboBox" 
                                      materialDesign:HintAssist.Hint="اختر الحساب"
                                      SelectedItem="{Binding SelectedAccount}"
                                      DisplayMemberPath="Name"/>
                        </StackPanel>

                        <!-- Description -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="البيان" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="DescriptionTextBox" 
                                     materialDesign:HintAssist.Hint="وصف القيد"
                                     Text="{Binding Description}"
                                     TextWrapping="Wrap"
                                     Height="60"
                                     VerticalScrollBarVisibility="Auto"/>
                        </StackPanel>

                        <!-- Amount Type -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="نوع المبلغ" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <ComboBox x:Name="AmountTypeComboBox" 
                                      materialDesign:HintAssist.Hint="اختر نوع المبلغ"
                                      SelectedItem="{Binding AmountType}">
                                <ComboBoxItem Content="مدين"/>
                                <ComboBoxItem Content="دائن"/>
                            </ComboBox>
                        </StackPanel>

                        <!-- Amount -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="المبلغ" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="AmountTextBox" 
                                     materialDesign:HintAssist.Hint="المبلغ"
                                     Text="{Binding Amount}"/>
                        </StackPanel>

                        <!-- Reference Number -->
                        <StackPanel Margin="0,0,0,15">
                            <TextBlock Text="رقم المرجع" FontWeight="SemiBold" Margin="0,0,0,5"/>
                            <TextBox x:Name="ReferenceTextBox" 
                                     materialDesign:HintAssist.Hint="رقم المرجع (اختياري)"
                                     Text="{Binding Reference}"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <!-- Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0">
                    <Button Content="💾 حفظ" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#27AE60" 
                            Foreground="White"
                            Width="100"
                            Margin="0,0,10,0"
                            Click="SaveButton_Click"/>
                    <Button Content="❌ إلغاء" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#E74C3C" 
                            Foreground="White"
                            Width="100"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
