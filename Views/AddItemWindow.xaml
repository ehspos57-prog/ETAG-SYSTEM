<Window x:Class="ETAG_ERP.Views.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="إدارة الصنف" 
        Height="700" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <Style x:Key="FormCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F5F5">
        <Border Style="{StaticResource FormCard}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="📦 إدارة الصنف" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="#2C3E50" 
                           Margin="0,0,0,20" Grid.Row="0"/>

                <!-- Form -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Basic Information -->
                        <GroupBox Header="المعلومات الأساسية" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="كود الصنف" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <TextBox x:Name="ItemCodeTextBox" 
                                             materialDesign:HintAssist.Hint="كود الصنف"
                                             Text="{Binding ItemCode}"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="اسم الصنف" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <TextBox x:Name="ItemNameTextBox" 
                                             materialDesign:HintAssist.Hint="اسم الصنف"
                                             Text="{Binding ItemName}"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="التصنيف" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="CategoryComboBox" 
                                              materialDesign:HintAssist.Hint="اختر التصنيف"
                                              SelectedItem="{Binding SelectedCategory}"
                                              DisplayMemberPath="Name"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="الوصف" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                    <TextBox x:Name="DescriptionTextBox" 
                                             materialDesign:HintAssist.Hint="وصف الصنف"
                                             Text="{Binding Description}"
                                             TextWrapping="Wrap"
                                             Height="60"
                                             VerticalScrollBarVisibility="Auto"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- Pricing Information -->
                        <GroupBox Header="معلومات التسعير" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="سعر البيع 1" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <TextBox x:Name="SellingPrice1TextBox" 
                                                 materialDesign:HintAssist.Hint="سعر البيع الأول"
                                                 Text="{Binding SellingPrice1}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="سعر البيع 2" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <TextBox x:Name="SellingPrice2TextBox" 
                                                 materialDesign:HintAssist.Hint="سعر البيع الثاني"
                                                 Text="{Binding SellingPrice2}"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="سعر البيع 3" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <TextBox x:Name="SellingPrice3TextBox" 
                                                 materialDesign:HintAssist.Hint="سعر البيع الثالث"
                                                 Text="{Binding SellingPrice3}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="سعر التكلفة" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <TextBox x:Name="CostPriceTextBox" 
                                                 materialDesign:HintAssist.Hint="سعر التكلفة"
                                                 Text="{Binding CostPrice}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <!-- Stock Information -->
                        <GroupBox Header="معلومات المخزون" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="الكمية في المخزون" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <TextBox x:Name="StockQuantityTextBox" 
                                                 materialDesign:HintAssist.Hint="الكمية"
                                                 Text="{Binding StockQuantity}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="الوحدة" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <TextBox x:Name="UnitTextBox" 
                                                 materialDesign:HintAssist.Hint="الوحدة"
                                                 Text="{Binding Unit}"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Margin="0,15,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="الحد الأدنى" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <TextBox x:Name="MinQuantityTextBox" 
                                                 materialDesign:HintAssist.Hint="الحد الأدنى"
                                                 Text="{Binding MinQuantity}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="الباركود" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <TextBox x:Name="BarcodeTextBox" 
                                                 materialDesign:HintAssist.Hint="الباركود"
                                                 Text="{Binding Barcode}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </GroupBox>

                        <!-- Additional Information -->
                        <GroupBox Header="معلومات إضافية" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="نسبة الضريبة" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <TextBox x:Name="TaxRateTextBox" 
                                                 materialDesign:HintAssist.Hint="نسبة الضريبة"
                                                 Text="{Binding TaxRate}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="نسبة الخصم" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <TextBox x:Name="DiscountRateTextBox" 
                                                 materialDesign:HintAssist.Hint="نسبة الخصم"
                                                 Text="{Binding DiscountRate}"/>
                                    </StackPanel>
                                </Grid>

                                <StackPanel Margin="0,15,0,0">
                                    <CheckBox x:Name="IsActiveCheckBox" 
                                              Content="نشط" 
                                              IsChecked="{Binding IsActive}"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>

                <!-- Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0">
                    <Button Content="💾 حفظ" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#27AE60" 
                            Foreground="White"
                            Width="100"
                            Margin="0,0,10,0"
                            Click="SaveButton_Click"/>
                    <Button Content="❌ إلغاء" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#E74C3C" 
                            Foreground="White"
                            Width="100"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
