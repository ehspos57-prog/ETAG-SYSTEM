<UserControl x:Class="ETAG_ERP.Views.PurchaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             Background="White"
             FontFamily="Segoe UI"
             FlowDirection="RightToLeft">

    <UserControl.Resources>
        <Style x:Key="PurchaseCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="🛒 إدارة المشتريات" 
                   FontSize="28" FontWeight="Bold" 
                   Foreground="#2C3E50" 
                   Margin="0,0,0,20" Grid.Row="0"/>

        <!-- Purchase Form -->
        <Border Style="{StaticResource PurchaseCard}" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Purchase Number -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="رقم الأمر" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox x:Name="PurchaseNumberTextBox" 
                             materialDesign:HintAssist.Hint="رقم أمر الشراء"
                             Text="{Binding PurchaseNumber}"/>
                </StackPanel>

                <!-- Supplier -->
                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="المورد" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox x:Name="SupplierComboBox" 
                              materialDesign:HintAssist.Hint="اختر المورد"
                              SelectedItem="{Binding SelectedSupplier}">
                        <ComboBoxItem Content="مورد جديد"/>
                    </ComboBox>
                </StackPanel>

                <!-- Purchase Date -->
                <StackPanel Grid.Column="2" Margin="0,0,10,0">
                    <TextBlock Text="تاريخ الشراء" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <DatePicker x:Name="PurchaseDatePicker" 
                                materialDesign:HintAssist.Hint="تاريخ الشراء"
                                SelectedDate="{Binding PurchaseDate}"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="➕ إضافة صنف" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#E67E22" 
                            Foreground="White"
                            Margin="5,0"
                            Click="AddItemButton_Click"/>
                    <Button Content="💾 حفظ" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#27AE60" 
                            Foreground="White"
                            Margin="5,0"
                            Click="SavePurchaseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Purchase Items -->
        <Border Style="{StaticResource PurchaseCard}" Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Items Header -->
                <TextBlock Grid.Row="0" Text="أصناف الشراء" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                <!-- Items DataGrid -->
                <DataGrid x:Name="PurchaseItemsDataGrid" 
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal"
                          AlternatingRowBackground="#F8F9FA"
                          RowHeight="35">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="اسم الصنف" Binding="{Binding ItemName}" Width="200"/>
                        <DataGridTextColumn Header="الكمية" Binding="{Binding Quantity}" Width="100"/>
                        <DataGridTextColumn Header="سعر الوحدة" Binding="{Binding UnitPrice, StringFormat='{}{0:N2}'}" Width="120"/>
                        <DataGridTextColumn Header="المجموع" Binding="{Binding Total, StringFormat='{}{0:N2}'}" Width="120"/>
                        <DataGridTemplateColumn Header="إجراءات" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="🗑️" Width="30" Click="RemoveItemButton_Click"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Summary -->
        <Border Style="{StaticResource PurchaseCard}" Grid.Row="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Total Amount -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="إجمالي المبلغ" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock x:Name="TotalAmountText" Text="0.00" FontSize="18" FontWeight="Bold" Foreground="#27AE60"/>
                </StackPanel>

                <!-- Paid Amount -->
                <StackPanel Grid.Column="1">
                    <TextBlock Text="المبلغ المدفوع" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBox x:Name="PaidAmountTextBox" 
                             Text="0" 
                             FontSize="16" 
                             FontWeight="Bold"
                             TextChanged="PaidAmountTextBox_TextChanged"/>
                </StackPanel>

                <!-- Remaining Amount -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="المبلغ المتبقي" FontWeight="Bold" Foreground="#2C3E50"/>
                    <TextBlock x:Name="RemainingAmountText" Text="0.00" FontSize="18" FontWeight="Bold" Foreground="#E74C3C"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Bottom">
                    <Button Content="📄 طباعة" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#3498DB" 
                            Foreground="White"
                            Margin="5,0"
                            Click="PrintPurchaseButton_Click"/>
                    <Button Content="📊 تصدير" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#9B59B6" 
                            Foreground="White"
                            Margin="5,0"
                            Click="ExportPurchaseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>