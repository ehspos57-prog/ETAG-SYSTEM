<Window x:Class="ETAG_ERP.Views.SettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="إعدادات النظام" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <Style x:Key="SettingsCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="⚙️ إعدادات النظام" 
                   FontSize="24" FontWeight="Bold" 
                   Foreground="#2C3E50" 
                   Margin="20,20,20,10" Grid.Row="0"/>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="20,0,20,20">
            <!-- Users Tab -->
            <TabItem Header="👥 إدارة المستخدمين">
                <Border Style="{StaticResource SettingsCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- User Controls -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <Button Content="➕ مستخدم جديد" 
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="#27AE60" 
                                    Foreground="White"
                                    Margin="5,0"
                                    Click="AddUserButton_Click"/>
                            <Button Content="✏️ تعديل" 
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="#3498DB" 
                                    Foreground="White"
                                    Margin="5,0"
                                    Click="EditUserButton_Click"/>
                            <Button Content="🗑️ حذف" 
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="#E74C3C" 
                                    Foreground="White"
                                    Margin="5,0"
                                    Click="DeleteUserButton_Click"/>
                            <Button Content="🔄 تحديث" 
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="#95A5A6" 
                                    Foreground="White"
                                    Margin="5,0"
                                    Click="RefreshUsersButton_Click"/>
                        </StackPanel>

                        <!-- Users DataGrid -->
                        <DataGrid x:Name="UsersDataGrid" 
                                  Grid.Row="1"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  HeadersVisibility="Column"
                                  GridLinesVisibility="Horizontal"
                                  AlternatingRowBackground="#F8F9FA"
                                  RowHeight="35">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="اسم المستخدم" Binding="{Binding Username}" Width="150"/>
                                <DataGridTextColumn Header="الاسم الكامل" Binding="{Binding FullName}" Width="200"/>
                                <DataGridTextColumn Header="الدور" Binding="{Binding Role}" Width="120"/>
                                <DataGridCheckBoxColumn Header="مدير" Binding="{Binding IsAdmin}" Width="80"/>
                                <DataGridTextColumn Header="تاريخ الإنشاء" Binding="{Binding CreatedAt, StringFormat='yyyy-MM-dd'}" Width="120"/>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- User Summary -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,0,0">
                            <TextBlock Text="إجمالي المستخدمين: " FontWeight="Bold" Foreground="#2C3E50"/>
                            <TextBlock x:Name="UsersCountText" Text="0" Margin="5,0"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Permissions Tab -->
            <TabItem Header="🔐 إدارة الصلاحيات">
                <Border Style="{StaticResource SettingsCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Permission Controls -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="اختر المستخدم:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ComboBox x:Name="UserComboBox" 
                                      Width="200" 
                                      DisplayMemberPath="Username"
                                      SelectedItem="{Binding SelectedUser}"/>
                            <Button Content="🔄 تحديث الصلاحيات" 
                                    Style="{StaticResource MaterialDesignRaisedButton}"
                                    Background="#9B59B6" 
                                    Foreground="White"
                                    Margin="10,0"
                                    Click="RefreshPermissionsButton_Click"/>
                        </StackPanel>

                        <!-- Permissions List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel x:Name="PermissionsPanel">
                                <!-- Permissions will be dynamically generated here -->
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </TabItem>

            <!-- System Settings Tab -->
            <TabItem Header="⚙️ إعدادات النظام">
                <Border Style="{StaticResource SettingsCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Database Settings -->
                        <GroupBox Header="إعدادات قاعدة البيانات" Grid.Row="0" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="مسار قاعدة البيانات:" Width="150" VerticalAlignment="Center"/>
                                    <TextBox x:Name="DatabasePathTextBox" Width="300" Margin="10,0"/>
                                    <Button Content="📁 تصفح" Width="80" Margin="10,0" Click="BrowseDatabaseButton_Click"/>
                                </StackPanel>
                                <Button Content="🔄 إعادة إنشاء قاعدة البيانات" 
                                        Style="{StaticResource MaterialDesignRaisedButton}"
                                        Background="#E67E22" 
                                        Foreground="White"
                                        Width="200" 
                                        Margin="0,10,0,0"
                                        Click="RecreateDatabaseButton_Click"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Theme Settings -->
                        <GroupBox Header="إعدادات المظهر" Grid.Row="1" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="الثيم:" Width="150" VerticalAlignment="Center"/>
                                    <ComboBox x:Name="ThemeComboBox" Width="200" Margin="10,0">
                                        <ComboBoxItem Content="فاتح" IsSelected="True"/>
                                        <ComboBoxItem Content="داكن"/>
                                    </ComboBox>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="صورة الخلفية:" Width="150" VerticalAlignment="Center"/>
                                    <TextBox x:Name="BackgroundImageTextBox" Width="300" Margin="10,0"/>
                                    <Button Content="📁 تصفح" Width="80" Margin="10,0" Click="BrowseBackgroundButton_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- Backup Settings -->
                        <GroupBox Header="إعدادات النسخ الاحتياطي" Grid.Row="2" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <Button Content="💾 إنشاء نسخة احتياطية" 
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            Background="#16A085" 
                                            Foreground="White"
                                            Margin="0,0,10,0"
                                            Click="CreateBackupButton_Click"/>
                                    <Button Content="📥 استعادة نسخة احتياطية" 
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            Background="#8E44AD" 
                                            Foreground="White"
                                            Click="RestoreBackupButton_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <!-- System Information -->
                        <GroupBox Header="معلومات النظام" Grid.Row="3">
                            <StackPanel Margin="10">
                                <TextBlock x:Name="SystemInfoText" TextWrapping="Wrap" FontFamily="Consolas"/>
                            </StackPanel>
                        </GroupBox>
                    </Grid>
                </Border>
            </TabItem>

            <!-- Reports Settings Tab -->
            <TabItem Header="📊 إعدادات التقارير">
                <Border Style="{StaticResource SettingsCard}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Report Settings -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,15">
                            <TextBlock Text="إعدادات التقارير" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="اسم الشركة:" Width="150" VerticalAlignment="Center"/>
                                <TextBox x:Name="CompanyNameTextBox" Width="300" Margin="10,0"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="عنوان الشركة:" Width="150" VerticalAlignment="Center"/>
                                <TextBox x:Name="CompanyAddressTextBox" Width="300" Margin="10,0"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="هاتف الشركة:" Width="150" VerticalAlignment="Center"/>
                                <TextBox x:Name="CompanyPhoneTextBox" Width="300" Margin="10,0"/>
                            </StackPanel>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="البريد الإلكتروني:" Width="150" VerticalAlignment="Center"/>
                                <TextBox x:Name="CompanyEmailTextBox" Width="300" Margin="10,0"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Save Button -->
                        <Button Grid.Row="1" 
                                Content="💾 حفظ الإعدادات" 
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#27AE60" 
                                Foreground="White"
                                Width="150" 
                                HorizontalAlignment="Left"
                                Click="SaveSettingsButton_Click"/>
                    </Grid>
                </Border>
            </TabItem>
        </TabControl>
    </Grid>
</Window>