<Window x:Class="ETAG_ERP.Views.ItemsInCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="الأصناف في التصنيف" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- العنوان -->
        <TextBlock Grid.Row="0" Text="{Binding CategoryName}" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- شريط البحث -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBox x:Name="SearchTextBox" Width="300" Height="35" 
                     FontSize="16" Padding="10" 
                     TextChanged="SearchTextBox_TextChanged"
                     Tag="البحث في الأصناف..."/>
            <Button Content="🔍 بحث" Width="80" Height="35" 
                    Margin="10,0,0,0" Click="Search_Click"/>
            <Button Content="🔄 تحديث" Width="80" Height="35" 
                    Margin="10,0,0,0" Click="Refresh_Click"/>
        </StackPanel>

        <!-- جدول الأصناف -->
        <DataGrid Grid.Row="2" x:Name="ItemsDataGrid" 
                  AutoGenerateColumns="False" 
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="الكود" Binding="{Binding ItemCode}" Width="100"/>
                <DataGridTextColumn Header="اسم الصنف" Binding="{Binding Name}" Width="200"/>
                <DataGridTextColumn Header="سعر البيع" Binding="{Binding SellPrice, StringFormat=C}" Width="100"/>
                <DataGridTextColumn Header="سعر الشراء" Binding="{Binding CostPrice, StringFormat=C}" Width="100"/>
                <DataGridTextColumn Header="الكمية المتاحة" Binding="{Binding Quantity}" Width="120"/>
                <DataGridTextColumn Header="الوحدة" Binding="{Binding Unit}" Width="80"/>
                <DataGridCheckBoxColumn Header="نشط" Binding="{Binding IsActive}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- الأزرار -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="➕ إضافة صنف" Background="#4CAF50" Foreground="White"
                    Width="120" Height="40" Margin="10" FontSize="14"
                    Click="AddItem_Click"/>
            <Button Content="✏️ تعديل" Background="#FF9800" Foreground="White"
                    Width="100" Height="40" Margin="10" FontSize="14"
                    Click="EditItem_Click"
                    IsEnabled="{Binding IsItemSelected}"/>
            <Button Content="🗑️ حذف" Background="#F44336" Foreground="White"
                    Width="100" Height="40" Margin="10" FontSize="14"
                    Click="DeleteItem_Click"
                    IsEnabled="{Binding IsItemSelected}"/>
            <Button Content="📊 تقرير" Background="#2196F3" Foreground="White"
                    Width="100" Height="40" Margin="10" FontSize="14"
                    Click="Report_Click"/>
            <Button Content="❌ إغلاق" Background="#9E9E9E" Foreground="White"
                    Width="100" Height="40" Margin="10" FontSize="14"
                    Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
