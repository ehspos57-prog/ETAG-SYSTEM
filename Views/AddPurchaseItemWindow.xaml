<Window x:Class="ETAG_ERP.Views.AddPurchaseItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="إضافة صنف للشراء" 
        Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <Style x:Key="FormCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#F5F5F5">
        <Border Style="{StaticResource FormCard}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Text="➕ إضافة صنف للشراء" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="#2C3E50" 
                           Margin="0,0,0,20" Grid.Row="0"/>

                <!-- Form -->
                <StackPanel Grid.Row="1">
                    <!-- Item Selection -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="اختر الصنف" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <ComboBox x:Name="ItemComboBox" 
                                  materialDesign:HintAssist.Hint="اختر الصنف"
                                  SelectedItem="{Binding SelectedItem}"
                                  DisplayMemberPath="ItemName"/>
                    </StackPanel>

                    <!-- Item Name -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="اسم الصنف" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="ItemNameTextBox" 
                                 materialDesign:HintAssist.Hint="اسم الصنف"
                                 Text="{Binding ItemName}"/>
                    </StackPanel>

                    <!-- Quantity -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="الكمية" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="QuantityTextBox" 
                                 materialDesign:HintAssist.Hint="الكمية"
                                 Text="{Binding Quantity}"/>
                    </StackPanel>

                    <!-- Unit Price -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="سعر الوحدة" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="UnitPriceTextBox" 
                                 materialDesign:HintAssist.Hint="سعر الوحدة"
                                 Text="{Binding UnitPrice}"/>
                    </StackPanel>

                    <!-- Total -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="المجموع" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="TotalText" 
                                   Text="0.00" 
                                   FontSize="16" 
                                   FontWeight="Bold" 
                                   Foreground="#27AE60"/>
                    </StackPanel>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0">
                    <Button Content="💾 إضافة" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#27AE60" 
                            Foreground="White"
                            Width="100"
                            Margin="0,0,10,0"
                            Click="AddButton_Click"/>
                    <Button Content="❌ إلغاء" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#E74C3C" 
                            Foreground="White"
                            Width="100"
                            Click="CancelButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
