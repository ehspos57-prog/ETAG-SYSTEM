<Window x:Class="ETAG_ERP.Views.TestRunnerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="اختبار النظام" 
        Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        FlowDirection="RightToLeft">

    <Window.Resources>
        <Style x:Key="TestCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Style="{StaticResource TestCard}" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="🧪 اختبار النظام" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="#2C3E50"/>
                    <TextBlock Text="اختبار شامل لجميع مكونات النظام" 
                               FontSize="14" 
                               Foreground="#7F8C8D" 
                               Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="▶️ تشغيل الاختبارات" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#27AE60" 
                            Foreground="White"
                            Margin="5,0"
                            Click="RunTestsButton_Click"/>
                    <Button Content="🔄 إعادة تشغيل" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#3498DB" 
                            Foreground="White"
                            Margin="5,0"
                            Click="RestartTestsButton_Click"/>
                    <Button Content="📊 تقرير الأداء" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Background="#9B59B6" 
                            Foreground="White"
                            Margin="5,0"
                            Click="PerformanceReportButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Test Results -->
        <Border Style="{StaticResource TestCard}" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Test Summary -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#E8F5E8" CornerRadius="5" Padding="10" Margin="5">
                        <StackPanel>
                            <TextBlock Text="إجمالي الاختبارات" FontWeight="Bold" Foreground="#27AE60"/>
                            <TextBlock x:Name="TotalTestsText" Text="0" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="1" Background="#E8F5E8" CornerRadius="5" Padding="10" Margin="5">
                        <StackPanel>
                            <TextBlock Text="نجحت" FontWeight="Bold" Foreground="#27AE60"/>
                            <TextBlock x:Name="PassedTestsText" Text="0" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="2" Background="#FFE8E8" CornerRadius="5" Padding="10" Margin="5">
                        <StackPanel>
                            <TextBlock Text="فشلت" FontWeight="Bold" Foreground="#E74C3C"/>
                            <TextBlock x:Name="FailedTestsText" Text="0" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <Border Grid.Column="3" Background="#E8F4FD" CornerRadius="5" Padding="10" Margin="5">
                        <StackPanel>
                            <TextBlock Text="نسبة النجاح" FontWeight="Bold" Foreground="#3498DB"/>
                            <TextBlock x:Name="SuccessRateText" Text="0%" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Test Results List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="TestResultsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{Binding BackgroundColor}" 
                                        BorderBrush="{Binding BorderColor}" 
                                        BorderThickness="1" 
                                        CornerRadius="5" 
                                        Margin="0,2" 
                                        Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding StatusIcon}" 
                                                   FontSize="16" 
                                                   VerticalAlignment="Center" 
                                                   Margin="0,0,10,0"/>
                                        
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding TestName}" 
                                                       FontWeight="Bold" 
                                                       Foreground="{Binding TextColor}"/>
                                            <TextBlock Text="{Binding Message}" 
                                                       FontSize="12" 
                                                       Foreground="#7F8C8D"/>
                                        </StackPanel>

                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding ExecutionTime}" 
                                                   FontSize="12" 
                                                   Foreground="#95A5A6" 
                                                   VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Progress Bar -->
        <Border Style="{StaticResource TestCard}" Grid.Row="2">
            <StackPanel>
                <TextBlock Text="تقدم الاختبارات" FontWeight="Bold" Margin="0,0,0,5"/>
                <ProgressBar x:Name="TestProgressBar" 
                             Height="8" 
                             Foreground="#3498DB"/>
                <TextBlock x:Name="ProgressText" 
                           Text="جاهز للتشغيل" 
                           FontSize="12" 
                           Foreground="#7F8C8D" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
