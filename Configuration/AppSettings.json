  },
  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "EnableSsl": true,
    "Username": "",
    "Password": "",
    "FromEmail": "noreply@etag.com",
    "FromName": "ETAG ERP System"
  },
  "Logging": {
    "LogLevel": "Information",
    "LogToFile": true,
    "LogFilePath": "Logs",
    "MaxLogFileSize": 10485760,
    "MaxLogFiles": 10
  },
  "Backup": {
    "Enabled": true,
    "Path": "Backups",
    "Interval": 24,
    "RetentionDays": 30,
    "Compress": true
