{
  "Database": {
    "ConnectionString": "Data Source=ETAG_ERP.db;Version=3;",
    "BackupPath": "Backups",
    "AutoBackup": true,
    "BackupInterval": 24
  },
  "Application": {
    "Name": "ETAG ERP System",
    "Version": "1.0.0",
    "CompanyName": "ETAG Company",
